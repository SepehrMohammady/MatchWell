<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
      android:name=".MainApplication"
      android:label="@string/app_name"
      android:icon="@mipmap/ic_launcher"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:allowBackup="false"
      android:theme="@style/AppTheme"
      android:usesCleartextTraffic="${usesCleartextTraffic}"
      android:supportsRtl="true">
      
      <!-- Main Activity - no launcher intent, handled by aliases -->
      <activity
        android:name=".MainActivity"
        android:label="@string/app_name"
        android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|screenSize|smallestScreenSize|uiMode"
        android:screenOrientation="portrait"
        android:launchMode="singleTask"
        android:windowSoftInputMode="adjustResize"
        android:exported="true">
      </activity>
      
      <!-- Default icon (First Stage) - enabled by default -->
      <activity-alias
        android:name=".MainActivityFirst"
        android:enabled="true"
        android:exported="true"
        android:icon="@mipmap/ic_launcher_first"
        android:roundIcon="@mipmap/ic_launcher_first"
        android:targetActivity=".MainActivity">
        <intent-filter>
          <action android:name="android.intent.action.MAIN" />
          <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
      </activity-alias>
      
      <!-- Final icon (after completing Level 50) - disabled by default -->
      <activity-alias
        android:name=".MainActivityFinal"
        android:enabled="false"
        android:exported="true"
        android:icon="@mipmap/ic_launcher_final"
        android:roundIcon="@mipmap/ic_launcher_final"
        android:targetActivity=".MainActivity">
        <intent-filter>
          <action android:name="android.intent.action.MAIN" />
          <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
      </activity-alias>
      
    </application>
</manifest>

